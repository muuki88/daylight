{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "types": [
          "history",
          "isomorphic-fetch",
          "moment",
          "react",
          "react-dom",
          "react-router",
          "socket.io-client",
          "webaudioapi",
          "webrtc",
          "webspeechapi"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "compileOnSave": false
}
